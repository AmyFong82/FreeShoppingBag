<%= form_for(@party) do |f| %>
	<%= f.hidden_field :organizer, :value => current_user.name %>
	<% if @party.errors.any? %>
	  <div id="error_explanation">
	    <h2>
	      <%= pluralize(@party.errors.count, "error") %>
	      prohibited this party from being saved:
	    </h2>
	 
	    <ul>
	    <% @party.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>

  <div class="field">
	Party name: <%= f.text_field :name %><br><br>
  </div>
  <div class="field">
	Date: <%= f.date_field :date %><br><br>
  </div>
  <div class="field">
	Time: <%= f.time_field :time %><br><br>
  </div>
  <div class="field">
	Location: <%= f.text_area :location %><br><br>
  </div>

  <div class="field">
	Activities: <%= f.collection_check_boxes(:activity_ids, Activity.all, :id, :name) do |b| %>
	<div class="form-check">
		<%= b.label(class: "form-check-label") %>
		<%= b.check_box(class: "form-check-input") %>
	</div>
	<% end %>
	<%= f.fields_for :activities do |a| %>
		<%= a.label :name, "Enter New Activity:" %>
		<%= a.text_field :name %>
		<% end %>
		<br><br>
  </div>

  <div class="field">
	Food: <%= f.collection_check_boxes(:food_ids, Food.all, :id, :name) do |b| %>
	<div class="form-check">
		<%= b.label(class: "form-check-label") %>
		<%= b.check_box(class: "form-check-input") %>
	</div>
	<% end %>
	<%= f.fields_for :foods do |a| %>
		<%= a.label :name, "Enter New Food:" %>
		<%= a.text_field :name %>
		<% end %>
		<br><br>
  </div>

  <div class="field">
	Drinks: <%= f.collection_check_boxes(:drink_ids, Drink.all, :id, :name) do |b| %>
	<div class="form-check">
		<%= b.label(class: "form-check-label") %>
		<%= b.check_box(class: "form-check-input") %>
	</div>
	<% end %>
	<%= f.fields_for :drinks do |a| %>
		<%= a.label :name, "Enter New Activity:" %>
		<%= a.text_field :name %>
		<% end %>
		<br><br>
  </div>

  <div class="actions">
	<%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>