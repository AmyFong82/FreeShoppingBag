<% if logged_in? %>
	<div>
		<h3>Hi, <%= current_user.first_name %>!</h3>
		<p>Find a party that you want to go from the list:</p>
	</div>

	<div class="list-group">
		<% @parties.each do |f| %>
			<% if !f.users.include?(current_user) %>
		    	<a><%= link_to f.name, party_path(f), class: "list-group-item list-group-item-action" %></a>
	    	<% end %>
		<% end %>
	</div>

<% else %>

  <div class="list-group">
		<% @parties.each do |f| %>
	    	<a><%= link_to f.name, party_path(f), class: "list-group-item list-group-item-action" %></a>
		<% end %>
  </div>

  <div>
  	<a class="btn btn-primary" href='/login' role="button">Login</a>
  </div>

  <div>
  	<p>Don't have an account?</p>
  	<a class="btn btn-primary" href='/signup' role="button">Sign Up</a>
  </div>
<% end %>