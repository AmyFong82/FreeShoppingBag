<% if logged_in? %>
	<%= render "users/greeting" %>
<% end %>

<h3 class="mt-3">Check Out Upcoming Parties:</h3>

<div class="list-group">
	<% @parties.each do |f| %>
		<% if logged_in? %>
			<% if f.users.exclude?(current_user) %>
				<a><%= link_to f.name, party_path(f), class: "list-group-item list-group-item-action" %></a>
			<% end %>
		<% else %>
			<a><%= link_to f.name, party_path(f), class: "list-group-item list-group-item-action" %></a>
		<% end %>
	<% end %>
</div>

<div>
	<%= link_to "The Most Popular Party", parties_most_popular_path, class: "btn btn-primary" %>
</div>

<% if !logged_in? %>
	<%= render 'login' %>
<% end %>