<h3>Start Your Own Party!</h3>
<%= form_for(@party) do |f| %>
	<%= f.hidden_field :organizer, :value => current_user.name %>
	<% if @party.errors.any? %>
	  <div id="error_explanation">
	    <h2>
	      <%= pluralize(@party.errors.count, "error") %>
	      prohibited this party from being saved:
	    </h2>
	 
	    <ul>
	    <% @party.errors.full_messages.each do |msg| %>
	      <li><%= msg %></li>
	    <% end %>
	    </ul>
	  </div>
	<% end %>
  <div class="field">
	Party name: <%= f.text_field :name %><br><br>
  </div>
  <div class="field">
	Date: <%= f.date_field :date %><br><br>
  </div>
  <div class="field">
	Time: <%= f.time_field :time %><br><br>
  </div>
  <div class="field">
	Location: <%= f.text_area :location %><br><br>
  </div>
  <div class="field">
	Activities: <%= f.collection_check_boxes(:activities, Activity.all, :id, :name) %><br><br>
  </div>
  <div class="field">
	Foods: <%= f.collection_check_boxes(:foods, Food.all, :id, :name) %><br><br>
  </div>
  <div class="field">
	Drinks: <%= f.collection_check_boxes(:drinks, Drink.all, :id, :name) %><br><br>
  </div>
  <div class="field">
	Snacks: <%= f.collection_check_boxes(:snacks, Snack.all, :id, :name) %><br><br>
  </div>

  <div class="actions">
	<%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>