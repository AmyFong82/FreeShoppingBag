<div>
	<h3><%= @party.name %></h3>
	<p>Date: <%= date_reformatted @party %></p>
	<p>Time: <%= time_format @party %></p>
	<p>Location: <%= @party.location %></p>
	<p>How many people are going: <%= @party.users.count %></p>
	<% if logged_in? %>
	<P>Organizer: <%= @party.organizer %></P>
	<p>Who are going: </p>
	<ul>
		<% @party.users.each do |f| %>
			<li><%= f.name %></li>
		<% end %>
	</ul>
	<% end %>
	<p>Activities:</p>
	<ul>
		<% @party.activities.each do |f| %>
			<li><%= f.name %></li>
		<% end %>
	</ul>

	<% if @party.drinks %>
		<p>Drinks:</p>
		<ul>
			<% @party.drinks.each do |f| %>
				<li><%= f.name %></li>
			<% end %>
		</ul>
	<% end %>

	<% if @party.foods %>
		<p>Foods:</p>
		<ul>
			<% @party.foods.each do |f| %>
				<li><%= f.name %></li>
			<% end %>
		</ul>
	<% end %>

</div>

<% if logged_in? %>
	<% if !@party.users.include?(current_user) %>
	  <div>
	  	<%= form_for(@party, url: user_party_path(current_user)) do |f| %>
	  	<%= f.hidden_field :id %>
		<%= f.submit "Join the party!", class: "btn btn-primary" %>
		<% end %>
	  </div>
	<% elsif @party.organizer == current_user.name %>
	  <div>
		<%= button_to "Edit Party", edit_user_party_path(@party.id), method: "edit", class: "btn btn-primary"%>
		<%= button_to "Cancel Party", party_path(@party.id), method: "delete", class: "btn btn-primary"%>
	  </div>
	<% else %>
	  <div>
		<%= button_to "Can't make it.", user_party_path(@party.id), method: "delete", class: "btn btn-primary"%>
	  </div>
	<% end %>
<% else %>
  <%= render 'login' %>
<% end %>