<%= render "greeting" %>

<%= render "alert" %>

<div>
 	<h3 class="mt-4"> <%= @user.num_of_parties %></h3>
	<div class="list-group">
		<% @parties.each do |f| %>
		    <%= link_to f.name, user_party_path(current_user, f), class: "list-group-item list-group-item-action" %>
		<% end %>
	</div>
</div>

<div>
	<h3 class="mt-4"><%= @user.num_of_parties_organized(current_user) %></h3>
	<div class="list-group">
		<% @parties_organized.each do |f| %>
		    <%= link_to f.name, user_party_path(current_user, f), class: "list-group-item list-group-item-action" %>
		<% end %>
</div>