<div>
	<h3>Welcome to Party! <%= @user.first_name %></h3>
</div>

<% if @parties.count > 0 %>
	<div>
		 <h4> You have joined <%= @parties.count %> <%= 'party'.pluralize(@parties.count) %>!</h4>
			<div class="list-group">
				<% @parties.each do |f| %>
				    <a><%= link_to f.name, user_party_path(current_user, f), class: "list-group-item list-group-item-action" %></a>
				<% end %>
			</div>
	</div>
<% else %>
	<div>
  		<a class="btn btn-primary" href='/parties' role="button">Explore Parties!</a>
	</div>
<% end %>
